package com.example.demo.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.bind.annotation.GetMapping;

import com.example.demo.entity.Product;
import com.example.demo.service.ServiceImplementation;

@RestController
@RequestMapping("products")
public class ProductController {
	
	private ServiceImplementation serviceImplementation;
	
	@Autowired
	public ProductController(ServiceImplementation serviceImplementation) {
		this.serviceImplementation = serviceImplementation;
	}
	
	@GetMapping("list")
	public List<Product> getAllProducts()
	{
		List<Product> products=serviceImplementation.displayAlldata();
		return products;
	}
	
	@GetMapping("list/{employeeId}")    //localhost:8080/employees/list/{id}
	public Product getProduct(@PathVariable("employeeId") int id)
	{
		Employee emp=serimp.displayById(id);
		if(emp==null)
		{
			throw new RuntimeException("Employee not found with the given id");
		}
	return emp;
	}
	@PostMapping("list") //localhost:8080/employees/list
	public void insertionEmployee(@RequestBody Employee emp)
	{
		emp.setId(0);
		serimp.insertEmployee(emp);
	}
	@PutMapping("list") //localhost:8080/employees/list
	public void updationEmployee(@RequestBody Employee emp)
	{
		serimp.insertEmployee(emp);
	}
	
}
